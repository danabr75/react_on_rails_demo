<!-- Used in React templates -->
<!DOCTYPE html>
<html>
  <head>
    <title>Beyond Embarrassment Studios</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
    <%= javascript_pack_tag 'react_application', 'data-turbolinks-track': 'reload' %>

    <% if user_signed_in? %>
      <script>
        window.currentUser = <%= UserSerializer.new(current_user, { is_collection: false }).serializable_hash.to_json.html_safe %>;
      </script>
    <% end %>

  </head>

  <body id="body">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <!-- React will have it's own navbar -->
    <div id='nav-bar-height-buffer'></div>
    <%= yield %>
  </body>
</html>
